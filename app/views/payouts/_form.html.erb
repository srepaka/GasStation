<%= form_for([@daily_report,@payout]) do |f| %>

	<% if @payout.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@payout.errors.count, "error") %> prohibited this payout from being saved:
			</h2>
			<ul>
				<%= @payout.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</p>

	<p>
		<%= f.label :category %><br>
		<%= f.collection_select :payout_category_id, PayoutCategory.all, :id, :pcategory %>
	</p>

	<p>
		<%= f.label :amount %><br>
		<%= f.number_field :amount, :class => 'text_field', :step => 'any' %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
