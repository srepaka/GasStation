<%= form_for @daily_report do |f| %>

	<% if @daily_report.errors.any? %>
                <div id="error_explanation">
                        <h2>
                                <%= pluralize(@daily_report.errors.count, "error") %> prohibited
                                this report from being saved:
                        </h2>
                        <ul>
                                <% @daily_report.errors.full_messages.each do |msg| %>
                                        <li><%= msg %></li>
                                <% end %>
                        </ul>
                </div>
        <% end %>

        <p>
                <%= f.label :date %><br>
                <%= f.date_select :date, default: Date.today %>
        </p>

        <p>
                <%= f.label :grocery %><br>
                <%= f.number_field :grocery, :class => 'text_field', :step => 'any' %>
        </p>
	
	<p>
                <%= f.label :fuel %><br>
                <%= f.number_field :fuel, :class => 'text_field', :step => 'any' %>
        </p>

	</p>
                <%= f.label :gift_cards %><br>
                <%= f.number_field :gift_cards, :class => 'text_field', :step => 'any' %>
        </p>

	<p>
                <%= f.label :credit %><br>
                <%= f.number_field :credit, :class => 'text_field', :step => 'any' %>
        </p>

	<p>
                <%= f.label :debit %><br>
                <%= f.number_field :debit, :class => 'text_field', :step => 'any' %>
        </p>

	<p>
                <%= f.label :cash %><br>
                <%= f.number_field :cash, :class => 'text_field', :step => 'any' %>
        </p>

	<p>
                <%= f.label :cash_counted %><br>
                <%= f.number_field :cash_counted, :class => 'text_field', :step => 'any' %>
        </p>

	<p>
                <%= f.label :commission %><br>
                <%= f.number_field :commission, :class => 'text_field', :step => 'any' %>
        </p>

	<p>
                <%= f.label :notes %><br>
                <%= f.text_field :notes %>
        </p>

        <p>
                <%= f.submit %>
        </p>

<% end %>

